{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": ["es2017", "dom"],
        "outDir": "lib",
        "declaration": true,
        "declarationDir": "typings",
        "strict": true,
        "removeComments": false,
        "sourceMap": true,
        "downlevelIteration": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "**/**/*.spec.ts",
        "**/**/*.test.ts"
    ]
}
